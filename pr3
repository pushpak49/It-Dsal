#include <iostream>

#include<stdlib.h>
using namespace std;
int main() {
  int i, n,number,lower=0,higher,middle,flag=0,a[3];
  cout<<"Enter total number in array=";
  cin>>n;
  cout<<"Enter the number in assending order=\n";
  for(i=0;i<n;i++)
  cin>>a[i];
  cout<<"Enter the number to be search=";
  cin>>number;
  higher=n-1;
  while(lower<=higher)
  {
      middle=(lower+higher)/2;
      if(number==a[middle])
      {
      flag=1;
      break;
      }
      if(number<a[middle])
       higher=middle-1;
       else
       lower=middle+1;
  }
  if(flag==1)
  {
      cout<<"**number is found**";
      
  }
  else
  cout<<"**number is not found;**";
}
